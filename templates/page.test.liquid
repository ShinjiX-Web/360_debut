{% style %}
.container {
  position: relative;
}
.container::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5); /* Adjust the background color and opacity as needed */
  z-index: 1; /* Ensure the overlay is behind the text */
}
h1 {
  position: absolute;
  top: 50%;
  left: 50%;
  color: white;
  transform: translate(-50%, -50%);/* Adjust the background color and opacity as needed */
  padding: 20px; /* Adjust the padding as needed */
  border-radius: 5px; /* Adjust the border radius as needed */
  z-index: 2; /* Ensure the text is on top of the overlay */
}
.img-fluid {
  display: block;
  width: 100%;
  height: auto;
}


{% endstyle %}

<div class="container">
  {{ 'lifestyle-2' | placeholder_svg_tag }}
  <div class="overlay-text">
    <div class="text-center text-white">
      <h1>This is the Page title</h1>
    </div>
  </div>
</div>

